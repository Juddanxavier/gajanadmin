# Production Environment Variables
# Copy this file to .env.production for production builds

# Environment
NODE_ENV=production

# Supabase (Production)
NEXT_PUBLIC_SUPABASE_URL=your-prod-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-prod-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-prod-service-key

# App Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_NAME="Gajan Admin"

# Email (Production SMTP)
EMAIL_FROM=noreply@yourdomain.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Tracking APIs (Production Keys)
TRACK123_API_KEY=your-prod-track123-key
AFTERSHIP_API_KEY=your-prod-aftership-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_MOCK_DATA=false
NEXT_PUBLIC_DEBUG_MODE=false

# Performance
NEXT_PUBLIC_DISABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_PROFILING=false

# Security
NEXT_PUBLIC_ENABLE_RATE_LIMITING=true
NEXT_PUBLIC_MAX_REQUESTS_PER_MINUTE=60

# Monitoring (Optional)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
