# Development Environment Variables
# Copy this file to .env.local for development

# Environment
NODE_ENV=development

# Supabase (Development)
NEXT_PUBLIC_SUPABASE_URL=your-dev-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-dev-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-dev-service-key

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME="Gajan Admin (Dev)"

# Email (Development - use Mailtrap or similar)
EMAIL_FROM=dev@gajan.local
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your-mailtrap-user
SMTP_PASSWORD=your-mailtrap-password

# Tracking APIs (Development/Test Keys)
TRACK123_API_KEY=your-dev-track123-key
AFTERSHIP_API_KEY=your-dev-aftership-key

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MOCK_DATA=true
NEXT_PUBLIC_DEBUG_MODE=true

# Performance
NEXT_PUBLIC_DISABLE_ANIMATIONS=false
NEXT_PUBLIC_ENABLE_PROFILING=true
